<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="@dimen/d10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pempek Lenjer"
            android:textStyle="bold"
            android:textColor="@color/NormalColorText"
            android:textSize="@dimen/s13" />

        <Button
            android:id="@+id/btnAdjustment"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Laporkan Perbedaan"
            android:textSize="11sp"
            android:paddingStart="@dimen/d8"
            android:paddingEnd="@dimen/d8"
            android:background="@drawable/border_round_outline"
            android:textAllCaps="false"
            android:textColor="@color/dusty_orange"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d6"
        android:orientation="horizontal"
        android:paddingStart="@dimen/d10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stok Awal"
            android:textSize="@dimen/s13"
            android:textColor="@color/NormalColorText"/>

        <TextView
            android:id="@+id/tvInitStok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="10"
            android:textSize="@dimen/s13"
            android:textColor="@color/NormalColorText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/d5"
        android:paddingStart="@dimen/d10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stok Masuk"
            android:textSize="@dimen/s13"
            android:textColor="@color/NormalColorText"/>

        <TextView
            android:id="@+id/tvInStok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="10"
            android:textSize="@dimen/s13"
            android:textColor="@color/NormalColorText"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/d10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stok Keluar"
            android:textSize="@dimen/s13"
            android:textColor="@color/NormalColorText"/>

        <TextView
            android:id="@+id/tvOutitStok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="10"
            android:textColor="@color/NormalColorText"
            android:textSize="@dimen/s13" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d5"
        android:orientation="horizontal"
        android:paddingStart="@dimen/d10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stok Terjual"
            android:textSize="@dimen/s13"
            android:textColor="@color/NormalColorText"/>

        <TextView
            android:id="@+id/tvSoldStok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="10"
            android:textSize="@dimen/s13"
            android:textColor="@color/NormalColorText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d5"
        android:orientation="horizontal"
        android:paddingStart="@dimen/d10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stok Rusak"
            android:textSize="@dimen/s13"
            android:textColor="@color/NormalColorText"/>

        <TextView
            android:id="@+id/tvDamagedStok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="10"
            android:textSize="@dimen/s13"
            android:textColor="@color/NormalColorText"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/d4"
        android:layout_marginBottom="4dp"
        android:background="@color/grey_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/d10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sisa Stok"
            android:textSize="@dimen/s13"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/tvEndStok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="10"
            android:textSize="@dimen/s13"
            android:textColor="@color/Black"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layoutAdjustment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d5"
        android:orientation="horizontal"
        android:paddingStart="@dimen/d10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Perbedaan Stok"
            android:textSize="@dimen/s13"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/tvAdjustmentStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="10"
            android:textSize="@dimen/s13"
            android:textColor="@color/Black"/>

    </LinearLayout>

</LinearLayout>