<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border_round_white"
                android:weightSum="2"
                android:padding="@dimen/d16">

                <TextView
                    android:id="@+id/tvTitleBarang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="AKTIVASI PIN"
                    android:textAllCaps="true"
                    android:textColor="@color/mireta_blue"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/d16">

                <Spinner
                    android:id="@+id/spinner_question"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingStart="11dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:background="@drawable/border_round_white"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/etJawaban"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d40"
                    android:layout_marginTop="@dimen/d8"
                    android:background="@drawable/border_round_white"
                    android:hint="Masukkan jawaban disini"
                    android:gravity="center"
                    android:textSize="13sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d8"
                    android:background="@android:color/transparent" />

                <EditText
                    android:id="@+id/etPin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d40"
                    android:background="@drawable/border_round_white"
                    android:hint="Masukkan PIN baru"
                    android:maxLength="6"
                    android:textAllCaps="false"
                    android:visibility="visible"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:textSize="13sp"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d8"
                    android:background="@android:color/transparent" />

                <EditText
                    android:id="@+id/etKonfirmasiPin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d40"
                    android:background="@drawable/border_round_white"
                    android:hint="Konfirmasi PIN baru"
                    android:maxLength="6"
                    android:textAllCaps="false"
                    android:visibility="visible"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:textSize="13sp"
                    tools:ignore="HardcodedText" />

