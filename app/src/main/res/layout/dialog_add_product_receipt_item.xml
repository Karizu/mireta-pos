    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_round_white"
        android:orientation="vertical"
        android:padding="@dimen/d16">

        <TextView
            android:id="@+id/tvTitleBarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tambah Tanda Terima Barang"
            android:textAllCaps="true"
            android:textColor="@color/mireta_blue"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/d16">

        <TextView
            android:id="@+id/tvItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:background="@drawable/border_round_white"
            android:text="Pilih Barang"
            android:paddingStart="@dimen/d16"
            android:textSize="13sp"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d15"
            android:background="@android:color/transparent" />

        <EditText
            android:id="@+id/etQty"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:background="@drawable/border_round_white"
            android:hint="Quantity"
            android:inputType="number"
            android:paddingStart="@dimen/d16"
            android:textAllCaps="false"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d15"
            android:background="@android:color/transparent"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stok Details"
            android:textStyle="bold"
            android:visibility="gone"
            tools:ignore="HardcodedText" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d15"
            android:background="@android:color/transparent"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="4">

            <TextView
                android:id="@+id/tvStok"
                android:layout_width="0dp"
                android:layout_height="@dimen/d40"
                android:layout_weight="3"
                android:background="@drawable/border_round_white"
                android:paddingStart="@dimen/d16"
                android:paddingTop="@dimen/d10"
                android:paddingEnd="@dimen/d16"
                android:text="0"
                android:textAllCaps="false"
                android:textSize="13sp"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/btnTambahStok"
                android:layout_width="0dp"
                android:layout_height="@dimen/d35"
                android:layout_marginStart="@dimen/d16"
                android:layout_marginBottom="@dimen/d8"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:src="@drawable/add"
                android:textColor="@color/white" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d15"
            android:background="@android:color/transparent"
            android:visibility="gone" />

        <Switch
            android:id="@+id/switchStok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/d16"
            android:text="Is Daily Stock"
            android:textColor="@color/Gray"
            android:visibility="gone" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d15"
            android:background="@android:color/transparent"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d16"
            android:layout_marginBottom="@dimen/d8"
            android:background="@drawable/background_button"
            android:text="Tambah"
            android:textColor="@color/white"
            tools:ignore="HardcodedText" />

    </LinearLayout>


</LinearLayout>