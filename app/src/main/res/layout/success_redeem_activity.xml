<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/d20">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:layout_alignParentTop="true"
            android:src="@drawable/top_receipt"
            android:layout_alignTop="@id/content_receipt"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="-5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_circle"
                android:layout_marginTop="@dimen/d20"/>
            <com.boardinglabs.mireta.standalone.component.fontview.RobotoBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TERIMA KASIH"
                android:textSize="@dimen/s16"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/d20"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"/>
            <com.boardinglabs.mireta.standalone.component.fontview.RobotoLightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:layout_gravity="center_horizontal"
                android:text="Anda mendapatkan bonus reward agen berupa"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/content_receipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/mid_receipt"
            android:layout_marginTop="@dimen/d170"
            android:paddingBottom="@dimen/d20">

            <com.boardinglabs.mireta.standalone.component.fontview.RobotoBoldTextView
                android:layout_width="@dimen/d200"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/d25"
                android:textColor="@color/black"
                android:text="REDEEM NAME"
                android:textAlignment="center"
                android:id="@+id/redeem_name"/>

            <com.boardinglabs.mireta.standalone.component.fontview.RobotoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="ORDER ID REDEEM"
                android:id="@+id/order_id_redeem"
                android:textAlignment="center"/>

            <com.boardinglabs.mireta.standalone.component.fontview.RobotoLightTextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="@dimen/s12"
                android:layout_marginTop="@dimen/d15"
                android:text="Tim kami akan segera menghubungi anda untuk proses verifikasi data dan proses penyerahan bonus reward agen"/>

            <com.boardinglabs.mireta.standalone.component.fontview.RobotoLightTextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/d10"
                android:textSize="@dimen/s12"
                android:text="atau hubungi call center untuk proses verifikasi lebih cepat di"/>

            <com.boardinglabs.mireta.standalone.component.fontview.RobotoBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d15"
                android:textSize="@dimen/s12"
                android:text="(021) 82740401"/>

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bottom_receipt"
            android:scaleType="fitStart"
            android:layout_below="@id/content_receipt"/>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/d40"
        android:id="@+id/ok_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="OK"
        android:layout_margin="20dp"
        android:background="@drawable/border_round_blue_gradient"/>
</LinearLayout>