<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border_round_white"
        android:weightSum="2"
        android:padding="@dimen/d16">

        <TextView
            android:id="@+id/tvTitleBarang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="BATALKAN TRANSAKSI"
            android:textAllCaps="true"
            android:textColor="@color/mireta_blue"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="@dimen/d18"
            android:layout_height="@dimen/d18"
            android:src="@drawable/close"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/d16">

        <TextView
            android:id="@+id/etMasterKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Silahkan input password void/settlement"
            android:paddingStart="@dimen/d16"
            android:textSize="13sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d6"
            android:background="@android:color/transparent" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:background="@drawable/border_round_white"
            android:hint="Password"
            android:lines="1"
            android:inputType="textPassword"
            android:paddingStart="@dimen/d16"
            android:textSize="13sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d15"
            android:visibility="gone"
            android:background="@android:color/transparent" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:background="@drawable/border_round_white"
            android:hint="Deskripsi"
            android:paddingStart="@dimen/d16"
            android:textAllCaps="false"
            android:visibility="gone"
            android:textSize="13sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <Button
        android:id="@+id/btnProses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d16"
        android:layout_marginEnd="@dimen/d16"
        android:layout_marginBottom="@dimen/d8"
        android:background="@drawable/background_button"
        android:textColor="@color/white"
        android:text="PROSES"/>

</LinearLayout>