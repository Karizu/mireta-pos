<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/d8"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/d10"
        android:paddingEnd="@dimen/d10"
        android:orientation="horizontal"
        android:layout_gravity="bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/almost_black"
            android:maxLines="1"
            android:textSize="15sp"
            android:id="@+id/item_name"
            android:text="Cuko 100ml"
            android:layout_gravity="center_vertical"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/add_minus_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="@dimen/d35"
                    android:layout_height="@dimen/d35"
                    android:background="@drawable/border_round_gradient"
                    android:src="@drawable/min"
                    android:id="@+id/minus_button"/>
                <EditText
                    android:layout_marginLeft="@dimen/d8"
                    android:id="@+id/qty_input"
                    android:layout_width="@dimen/d45"
                    android:layout_height="@dimen/d35"
                    android:background="@drawable/border_round_white"
                    android:hint="0"
                    android:inputType="number"
                    android:textAllCaps="false"
                    android:enabled="false"
                    android:textColor="@color/almost_black"
                    android:textAlignment="center"
                    android:textSize="@dimen/s15"/>

                <ImageButton
                    android:layout_width="@dimen/d35"
                    android:layout_height="@dimen/d35"
                    android:layout_marginLeft="@dimen/d8"
                    android:background="@drawable/border_round_gradient"
                    android:src="@drawable/fab_add"
                    android:id="@+id/add_button"/>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/d8"
        android:background="@color/grey_background"/>

</LinearLayout>
