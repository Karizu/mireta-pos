<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modul.old.onboard.OnBoardPagerFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/d20"
    android:background="@color/ligh_blue">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/img_onboard_1"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PPOB"
            android:textAlignment="center"
            android:textSize="@dimen/s30"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beli kebutuhan bulananmu disini."
            android:textAlignment="center"
            android:textSize="@dimen/s18"
            android:layout_marginTop="@dimen/d20"
            android:layout_marginBottom="@dimen/d120"
            android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>
