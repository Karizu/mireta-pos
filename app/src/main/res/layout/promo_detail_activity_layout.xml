<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/toolbar"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:src="@drawable/promo_dummy"
                android:scaleType="centerCrop"
                android:id="@+id/img_promo"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/bg_black_gradient_transparent"></View>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="@dimen/d10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="@dimen/d50"
                    android:layout_height="@dimen/d50"
                    android:src="@drawable/promo_dummy"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="100dp"
                    android:layout_marginRight="@dimen/d10"/>
                <com.boardinglabs.mireta.standalone.component.fontview.RobotoBoldTextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Promo Title"
                    android:textStyle="bold"
                    android:textSize="@dimen/s20"

                    android:textColor="@color/black"
                    android:id="@+id/title"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_share_black"/>
            </LinearLayout>
            <com.boardinglabs.mireta.standalone.component.fontview.RobotoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DESKRIPSI"
                android:textSize="@dimen/s15"
                android:layout_marginTop="@dimen/d20"
                android:textColor="@color/gray.primary"
                />
            <com.boardinglabs.mireta.standalone.component.fontview.RobotoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Promo Content"
                android:textSize="@dimen/s15"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/d10"
                android:id="@+id/content"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>